PROXY_URL=${PROXY_URL:-socks5://127.0.0.1:1086}

proxy_enable() {
  export http_proxy=${PROXY_URL}
  export https_proxy=${PROXY_URL}
  export HTTP_PROXY=${PROXY_URL}
  export HTTPS_PROXY=${PROXY_URL}
}

pc() {
  HTTP_PROXY=${PROXY_URL} HTTPS_PROXY=${PROXY_URL} http_proxy=${PROXY_URL} https_proxy=${PROXY_URL} $*
}

proxy_disable() {
  unset http_proxy
  unset https_proxy
  unset HTTP_PROXY
  unset HTTPS_PROXY
}